<body>
<referenceBlock name="product.info.bundle.options.radio">
            <action method="setTemplate" ifconfig="product_stock/general/enable">
                <argument name="template" xsi:type="string">Bluethinkinc_NotifyStockAvailability::catalog/product/view/type/bundle/option/radio.phtml</argument>
            </action>
             <arguments>
               <argument name="viewModel" xsi:type="object">Bluethinkinc\NotifyStockAvailability\viewModel\StockAvailabilityview</argument>
